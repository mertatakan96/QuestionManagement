<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        android:id="@+id/bottomBar"
        android:background="@color/darkPurple"
        app:itemIconTint="@color/purple"
        app:itemTextColor="@color/purple">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/profilePageProfileImage"
        android:layout_width="160dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        tools:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/profilePageUsername"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePageProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="USERNAME" />

    <Button
        android:id="@+id/profilePageMyQuestionnaires"
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@+id/profilePageUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="300dp"
        android:backgroundTint="@color/lightPurple"
        android:fontFamily="monospace"
        android:onClick="profilePageMyQuestionnairesClicked"
        android:text="my questionnaires"
        android:textColor="@color/darkBlue"
        app:cornerRadius="35sp" />

    <Button
        android:id="@+id/profilePageEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="14dp"
        android:layout_toEndOf="@+id/profilePageProfileImage"
        android:backgroundTint="@color/lightPurple"
        android:fontFamily="monospace"
        android:onClick="profilePageEditProfileClicked"
        android:text="Edit"
        android:textColor="@color/darkBlue"
        app:cornerRadius="100sp" />

</RelativeLayout>